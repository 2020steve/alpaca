<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>examples</id>
    <formats>
        <format>zip</format>
    </formats>
    <baseDirectory>/</baseDirectory>
    <fileSets>
        <fileSet>
            <directory>${basedir}/src/main/webapp/alpaca/examples</directory>
            <outputDirectory>/examples</outputDirectory>
            <filtered>true</filtered>
            <includes>
                <include>**/*.html</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/alpaca/examples</directory>
            <outputDirectory>/examples</outputDirectory>
            <filtered>false</filtered>
            <excludes>
                <exclude>**/*.html</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/target/${pom.artifactId}-${pom.version}/alpaca/css</directory>
            <outputDirectory>/css</outputDirectory>
            <filtered>false</filtered>
        </fileSet>
        <fileSet>
            <directory>${basedir}/target/${pom.artifactId}-${pom.version}/alpaca/js</directory>
            <outputDirectory>/js</outputDirectory>
            <filtered>false</filtered>
        </fileSet>
        <fileSet>
            <directory>${basedir}/target/${pom.artifactId}-${pom.version}/alpaca</directory>
            <includes>
                <include>*.html</include>
            </includes>
            <outputDirectory>/</outputDirectory>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>${basedir}/target/${pom.artifactId}-${pom.version}/alpaca/tests</directory>
            <outputDirectory>/tests</outputDirectory>
            <filtered>true</filtered>
            <excludes>
                <exclude>js_src/**/*</exclude>
            </excludes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${basedir}/target/${pom.artifactId}-${pom.version}/alpaca/favicon.ico</source>
            <outputDirectory>/</outputDirectory>
        </file>
    </files>
</assembly>